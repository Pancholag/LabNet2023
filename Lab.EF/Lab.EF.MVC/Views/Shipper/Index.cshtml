@model List<Lab.EF.MVC.Models.ShipperViewModel>

@{
    ViewBag.Title = "Transportistas";
}

<h2>Transportistas</h2>

<table class="table">
    <thead>
        <tr>
            <td>ID transportista</td>
            <td>Nombre transportista</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>

        @foreach (var i in Model) 
        {
            <tr>
                <td>@i.ShipperId</td>
                <td>@Html.ActionLink(@i.CompanyName.ToString(), "Details", new { id = i.ShipperId })</td>
                <td>@Html.ActionLink("Modificar", "Update", new { id = i.ShipperId })</td>
                <td>@Html.ActionLink("Borrar", "Delete", new { id = i.ShipperId })</td>
            </tr>
        }

    </tbody>
</table>
<div>
    @Html.ActionLink("Insertar nuevo Transportista","Insert")
</div>

